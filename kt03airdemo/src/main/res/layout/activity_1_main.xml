<com.aigo.kt03airdemo.ui.view.ResideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_1_home_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drw_1_menu_background">

        <include layout="@layout/activity_1_main_menu" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/tl_1_actionbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_50b017"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/rl_1_indoor_menu"
                android:layout_width="45dp"
                android:layout_height="44dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drw_1_home_menu_icon_select" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_1_home_actionbar_appliance_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="历史记录"
                android:textColor="@color/color_ffffff"
                android:textSize="17sp"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/rl_1_indoor_share"
                android:layout_width="45dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drw_1_home_share_select" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_1_home_add_appliance_control"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:visibility="visible">

               <!-- <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drw_1_home_add_appliance_control_select" />
-->
                <TextView
                    android:id="@+id/tv_unimport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    android:paddingRight="10dp"
                    android:text="导出文件"/>

                <TextView
                    android:id="@+id/tv_all_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    android:text="全部删除"
                    android:layout_toRightOf="@+id/tv_unimport"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_1_home_down_button"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_ebefe9"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_1_home_indoor_environment_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_1_home_indoor_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drw_1_home_indoor_environment_select_icon" />

                <TextView
                    android:id="@+id/tv_1_home_indoor_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="室内环境"
                    android:textColor="@color/color_50b017"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_1_home_appliance_control_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_1_home_appliance_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drw_1_home_appliance_control_icon" />

                <TextView
                    android:id="@+id/tv_1_home_appliance_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="历史记录"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_1_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_1_home_down_button"
            android:layout_below="@id/tl_1_actionbar">

        </FrameLayout>

    </RelativeLayout>


</com.aigo.kt03airdemo.ui.view.ResideLayout>
