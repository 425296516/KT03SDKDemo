<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aigo.kt03.fragment.ConnectConfigurationResultFragment">

    <RelativeLayout
        android:id="@+id/rl_1_connect_configuration_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:background="@drawable/drw_1_connect_initialize_button_background_select">

        <TextView
            android:id="@+id/tv_1_connect_configuration_result_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="返回"
            android:textColor="@color/color_50b017"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_1_connect_configuration_result_button">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_1_connect_configuration_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/drw_1_connect_configuration_fail_icon"/>

            <TextView
                android:id="@+id/tv_1_connect_configuration_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47dp"
                android:layout_marginRight="47dp"
                android:layout_marginTop="100dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:text="@string/connect_configuration_fail"
                android:textSize="15sp"
                android:textColor="@color/color_535353"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
