<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_50b017"
    tools:context="com.aigo.kt03.fragment.AddKeyConfirmFragment">

    <RelativeLayout
        android:id="@+id/rl_1_add_key_confirm_next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/drw_1_add_appliance_control_button_background_select">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下一步"
            android:textColor="@color/color_fbfff8"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_1_add_key_confirm_next_step">

        <LinearLayout
            android:id="@+id/ll_1_add_key_confirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/drw_1_add_point"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="13sp"
                android:text="请选择要保存的按键"
                android:textColor="@color/color_fbfff8"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_above="@id/ll_1_add_key_confirm_text">

            <LinearLayout
                android:id="@+id/ll_1_add_key_confirm_boot_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开机键"
                    android:textColor="@color/color_fbfff8"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_1_add_key_confirm_boot_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="82dp"
                    android:src="@drawable/drw_1_add_key_confirm_switch"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_1_add_key_confirm_shutdown_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="33dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关机键"
                    android:textColor="@color/color_fbfff8"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_1_add_key_confirm_shutdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="82dp"
                    android:src="@drawable/drw_1_add_key_confirm_switch"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
